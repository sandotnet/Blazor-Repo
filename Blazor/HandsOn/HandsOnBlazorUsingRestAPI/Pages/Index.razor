@page "/"
@inherits HandsOnBlazorUsingRestAPI.Models.MovieBase
<div class="cotainer">
    <a href="AddMovie">AddMovie</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Lang</th>
                <th>Year</th>
                <th>Actor</th>
                <th>Director</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Movies)
            {
                <tr>
                    <td>@item.movieId</td>
                    <td>@item.title</td>
                    <td>@item.language</td>
                    <td>@item.releaseYear</td>
                    <td>@item.actor</td>
                    <td>@item.director</td>
                    <td>
                        <a href="GetMovie/@item.movieId">Details</a>
                        <a href="EditMovie/@item.movieId">Edit</a>
                        <a href="DeleteMovie/@item.movieId">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

